@model List<LaserArt.Models.CardModel>
@{
    ViewBag.Title = "OrderDetails";
}

<div class="jumbotron">

    @foreach (var item in Model)
    {
        <div class="row orderItem" id="@(item.product.Id+"itemCard")">
            <div class="row">
                <div class="col-md-3">
                    <p>Ապրանքը</p>
                </div>
                
                <div class="col-md-2">
                    <p>Քանակ</p>
                </div>
                <div class="col-md-2">
                    <p>Գին</p>
                </div>
             
            </div>
            <hr class="productPagehr" />
            <div class="row ">
                <div class="col-md-3">
                    <p>@item.product.ProductTitle </p>
                    <img src="@item.product.ImageSource" class="imageHeader" />
                </div>
               
                <div class="col-md-2">
                    <p>@item.ProductQuantity</p>
                </div>
                <div class="col-md-2">
                    <p>@item.product.Price դր.</p>
                </div>
               
            </div>
        </div>
        <hr />
    }
   
</div>

