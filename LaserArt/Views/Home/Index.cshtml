<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            @{
                int indexCarousel = 0;
                foreach (var item in ViewBag.Sales)
                {
                    <div class="item @(indexCarousel==0?" active":"")">
                        <img class="myslideImage" src="@item.image" style="width:100%">
                    </div>
                    indexCarousel++;
                }
            }

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="container jumbotron" style="padding-top:5px !important;">
    <div class="row" align="left">
        @ViewBag.Info
    </div>

    @foreach (var item in Model)
    {
        if (item.Value.Count == 0)
        {
            continue;
        }
        @Html.Raw("<div class=\"row\" >");


        <a style="text-decoration:none;color:black;" href="/home/category/@item.Value[0].CategoryId"><h3 style="font-size:30px;">@item.Key.CategoryName</h3></a>
        <hr />
        int i = 0;
        foreach (var product in item.Value)
        {

            if (i == 0 || i % 5 == 0)
            {
                @Html.Raw("<div class=\"row\" >");
            }
            <div class="col-sm-3 item-div" style="width:20% !important">
                @if (this.User.IsInRole("Administrator"))
                    {
                    <a href="/home/editproduct/@product.Id">փոփոխել</a>
                }
                <div class="row " align="center" id="@product.Id" style="font-size:12px; padding:5px;">
                    <div class="col-md-12 ">
                        <a href="/home/product/@product.Id">
                            <img style="width:70%; height:auto;" src="@product.ImageSource" />
                        </a>
                    </div>
                </div>
                <div class="properties-div" align="center">
                    <a href="/home/product/@product.Id">

                        <p style="margin-top:10px;height:50px; font-size:12px;" class="text">#@product.Id <b style="font-weight:800;">@product.ProductTitle</b></p>
                    </a>
                    <p style="font-size:12px; height:30px;">
                        Գինը <del>@(product.PriceDiscounted == 0 ? "" : product.PriceDiscounted.ToString() + "դր.") </del>
                        <br />
                        <b> դր. @product.Price</b><span>@(product.Measure.Id==1?"":"/"+product.Measure.Name)</span>
                    </p>

                    <div class="row item-sub" align="center">
                        <div class=" col-sm-12 input-group input-number-group">

                            <div class=" col-sm-4 input-group-button">
                                <span class="input-number-decrement">-</span>
                            </div>
                            <input type="number" name="@Convert.ToInt32(product.Measure.IsDecimal)" class="col-sm-4 cardQuantity form-control" id="cardQuantity" min="1" step="1" value="@(product.Measure.IsDecimal?"0.1":"1")" />
                            <div style="color:red; font-size:12px;" class="cardQuantityRequired" id="cardQuantityRequired"></div>

                            <div class="input-group-button col-sm-4">
                                <span class="input-number-increment">+</span>
                            </div>
                        </div>
                    </div>
                    <input type="button" value="Ավելացնել" style="@(Request.Browser.IsMobileDevice?"font-size:10px;text-align:center;":"")" class="btn btn-default  btn-buy add-basket" name="@Convert.ToInt32(product.Measure.IsDecimal)" id="@product.Id" />
                </div>
            </div>
            i++;
            if (i != 0 && i % 5 == 0 || i == item.Value.Count)
            {
                @Html.Raw("</div>")

            }
        }
        @Html.Raw("</div>")
    }
</div>
<script src="~/Scripts/carousel.js"></script>
