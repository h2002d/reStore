@model List<LaserArt.Models.CardModel>

@{
            var isCategory = ViewBag.Route == "CATEGORY"|| ViewBag.Route== "DISCOUNT";
}

<table class="table table-striped" id="table-container" style="font-size:10px;z-index:99999;" @(isCategory?"data-spy=affix":"name=34")>
    <thead>
        <tr>
            <th>Ապրանք</th>
            <th>Քանակ</th>
            <th>Գին</th>
            <th>●</th>
        </tr>
    </thead>
    <tbody class="products-body">
        @foreach (var item in Model)
        {
            <tr class="product_@item.ProductId" id="product_@item.ProductId">
                <td>
                    <a href="/Home/Product/@item.ProductId">@item.product.ProductTitle</a>
                </td>
                <td>@item.ProductQuantity</td>
                <td>
                    <p>@item.product.Price դր.</p>
                </td>
                <td>
                    <a class="removeCard" style="font-size:11px;" id="@item.product.Id">
                        <img style="width:20px; height:auto;" src="~/images/delete1600.png" />
                    </a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="4">
                <div class="row">
                    <div class="col-sm-6">
                        <select class="city-select">
                            @foreach (var item in ViewBag.Cities)
                            {
                                <option name="@item.Money" value="@item.Id">@item.Name @item.Money</option>
                            }

                        </select>
                    </div>
                    <div class="col-sm-6">
                        <p>Գումարը: <b class="card-amount">@ViewBag.Sum դր.</b></p>
                        <p>Առաքում: <b class="delivery-money"></b></p>
                        <p>Ընդամենը:<b class="average-amount"></b></p>
                    </div>
                </div>
                @if (Model.Count != 0)
                {
                    <input type="button" class="btn btn-default  btn-category-order btn-order-accomplished" onclick="orderBtnClick()" value="Պատվիրել" />
                }
            </td>
        </tr>
    </tbody>
</table>

<script>
    $(document).ready(function () {
        var amount = parseInt($('.card-amount').text());
        var deliveryMoney = parseInt($('.city-select').find(":selected").attr('name'));
        var cardAverage = amount + deliveryMoney;
        $('.delivery-money').text(deliveryMoney);
        $('.average-amount').text(cardAverage);
    });
</script>
