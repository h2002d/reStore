@model LaserArt.Models.Order

@{
    ViewBag.Title = "Պատվերի էջ";
}

<h2>Պատվիրել</h2>
<div class="container" align="center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="margin-left:10px;">
            @Html.HiddenFor(model=>model.city.Id)
            @Html.HiddenFor(model => model.city.Name)
            @Html.HiddenFor(model => model.city.Money)
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-sm-10">
                    <p class="float-lt">Անուն</p>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "Укажите имя", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-sm-10">
                    <p class="float-lt">Ազգանուն</p>

                    @Html.EditorFor(model => model.SurName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SurName, "Укажите фамилию", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <p class="float-lt">Քաղաք</p>
                    @Html.DropDownListFor(model => model.CityId, new SelectList(ViewBag.Cities,
                                           "Id", "Name"),
                                            "--Ընտրեք կատեգորիան--",

                                new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <p class="float-lt">Հասցե</p>
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address, "Укажите адрес", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <p class="float-lt">Հեռախոսահամար</p>

                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "Укажите номер телефона", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <p class="float-lt">Վճարման եղանակը</p>

                    @Html.RadioButtonFor(model => model.isCash,true, new { htmlAttributes = new { @class = "form-control" } }) Կանխիկ
                    @Html.RadioButtonFor(model => model.isCash, false, new { htmlAttributes = new { @class = "form-control" } }) Քարտով


                </div>
            </div>
            <div class="form-group style" style="display:none">
                @Html.LabelFor(model => model.OrderDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="display:none">
                @Html.LabelFor(model => model.Latitide, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Latitide, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Latitide, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="display:none">
                @Html.LabelFor(model => model.Longitude, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Longitude, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="display:none">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @value="0" ,@class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Status)
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    <input type="submit" value="Պատվիրել" class="btn btn-default  btn-buy btn-order-approve" onclick="showorderDiv()" />
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

