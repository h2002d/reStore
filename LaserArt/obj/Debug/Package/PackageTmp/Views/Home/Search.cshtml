@model List<LaserArt.Models.Product>

@{
    ViewBag.Title = "Home Page";
}


<div class="container jumbotron" style="padding-top:5px !important;">
    <div class="row" align="left">
        @ViewBag.Info
    </div>
    <hr />
    @{
        var count = 0;
    }
    @foreach (var item in Model)
    {
        if (count % 3 == 0 && count == 0)
        {
            @Html.Raw("<div class=\"row\" id=\"" + count + "\">");
        }

        <div class="col-md-4 item-div">
            @if (this.User.IsInRole("Administrator"))
            {
                <a href="/home/editproduct/@item.Id">Изменить</a>
            }
            <div class="row product" align="center" id="@item.Id" style="font-size:12px; padding:5px; margin-bottom:20px;">
                <div class="col-md-12">
                    <img style="width:70%; height:auto;" src="@item.ImageSource" />
                    <p style="margin-top:10px;">#@item.Id <b style="font-weight:800;">@item.ProductTitle</b></p>
                    <p style="display:inline">
                        Цена: @item.Price руб.
                        @if (@item.PriceDiscounted != 0)
                        {
                            <del style="display:inline; color:red;"> @item.PriceDiscounted</del>
                        }
                    </p>
                </div>
            </div>
            <div class="row" align="center">
                <input type="button" value="Купить" class="btn btn-default btn-buy" onclick="orderBtnClickItem(@item.Id)" />
            </div>
        </div>
        if (count % 3 == 0 && count == 0)
        {
            Html.Raw("</div>");

        }
        count++;

    }
</div>
<script src="~/Scripts/carousel.js"></script>