@model List<LaserArt.Models.CardModel>
@{
    ViewBag.Title = "Order";
}
<input type="hidden" value="@ViewBag.ListInt" id="listInt" />
<div class="jumbotron">
    
    @foreach (var item in Model)
    {
        <div class="row orderItem">
        <div class="row">
            <div class="col-md-3">
                <p>Название</p>
            </div>
         
            <div class="col-md-3">
                <p>Количество</p>
            </div>
            <div class="col-md-3">
                <p>Цена</p>
            </div>
        </div>
            <hr class="productPagehr"/>
        <div class="row ">
            <div class="col-md-3">
                <p>@item.product.ProductTitle</p>
                <img src="@item.product.ImageSource" class="imageHeader" />
            </div>
           
            <div class="col-md-3">
                <p>@item.ProductQuantity</p>
            </div>
            <div class="col-md-3">
                <p>@item.product.Price руб.</p>
                @if (@item.product.PriceDiscounted != 0)
                {
                    <del> @item.product.PriceDiscounted</del>
                }
            </div>
        </div>
    </div>
        <hr />
    }
    <div class="row" align="right">
        <p>Сумма заказа:@ViewBag.Sum</p>
        <input type="button" value="Заказать" onclick="goToDetails()"/>
    </div>
</div>

